page{
	width: 100%;
	height: 100%;
	overflow: hidden;
}
.container{
	width: 100%;
	height: 100%;
}
.container video{
	width: 100%;
	height: 100%;
	z-index: 1;
}
.bottom{
	position: fixed;
	left: 0;
	bottom: 0;
	width: 100%;
	z-index: 99999999;
}
.goods_wrap{
	display: flex;
}
.bag{
	width: 88rpx;
	height: 99rpx;
	margin-left: 18rpx;
	margin-top: 10rpx;
}
.share_wrap{
	width: 50rpx;
	margin-right: 25rpx;
	margin-top: 24rpx;
}
.share{
	width: 50rpx;
	height: 50rpx;
}
.share_txt{
	display: block;
	text-align: center;
	font-size: 24rpx;
	color: #fff;
	margin-top: 10rpx;
}
.goods{
	flex: 1;
	margin-left: 10rpx;
	display: block;
}
.dbox{
	background: #fff;
	width: 438rpx;
	height: 125rpx;
	border-radius: 6rpx;
}
.goods_name{
	width: 100%;
	font-size: 28rpx;
	line-height: 32rpx;
	height: 64rpx;
	overflow: hidden;
	margin: 17rpx 15rpx 5rpx;
	white-space: normal;
}
.goods_pri{
	display: block;
	font-size: 32rpx;
	color: #f23030;
}
.goods_img{
	width: 125rpx;
	height: 125rpx;
}
.user_name{
	font-size: 28rpx;
	color: #fff;
	margin: 46rpx 0 0 20rpx;
}
.user_intro{
	font-size: 32rpx;
	color: #fff;
	margin: 19rpx 20rpx 36rpx;
	line-height: 40rpx;
	height: 80rpx;
	overflow: hidden;
	white-space: normal;
}
.bwrap{
	width: 100%;
	height: 100%;
	position: fixed;
	top: 0;
	left: 0;
}