.paompt{
	padding: 20rpx;
	background: #fef5d7;
	font-size: 28rpx;
	color: #e6a852;
}
.wrap{
	padding: 0 20rpx;
}
.tit{
	font-size: 28rpx;
	color: #333;
	margin: 40rpx 0;
}
.username{
	width: 100%;
	height: 90rpx;
	background: #f1f1f1;
	color: #333;
	border-radius: 10rpx;
	margin-bottom: 10px;
	font-size: 28rpx;
	text-indent: 30rpx;
}
.login_btn{
	width: 100%;
	height: 90rpx;
	font-size: 28rpx;
	color: #fff;
	border-radius: 10rpx;
	background: #f23030;
	border: none;
	line-height: 90rpx;
}
.login_ps{
	margin: 40rpx 20rpx 0;
	position: relative;
	height: 40rpx;
}
.login_ps view{
	position: absolute;
	width: 100%;
	border-top: 2rpx solid #c9c9c9;
	top: 19rpx;
	z-index: 1;
}
.login_ps text{
	font-size: 28rpx;
	color: #696969;
	text-align: center;
	line-height: 40rpx;
	background: #fff;
	display: block;
	z-index: 2;
	position: relative;
	width: 260rpx;
	margin: 0 auto;
}
.creat{
	text-align: center;
	background: #36b433;
	margin-top: 40rpx;
}