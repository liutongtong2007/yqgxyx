  margin-right: 20rpx;
}
.clm_time{
  width: 240rpx;
  font-size: 24rpx;
  color: #919191;
}
.cl_cont{
  font-size: 28rpx;
  line-height: 40rpx;
  margin-top: 20rpx;
  color: #343434;
  height: 80rpx;
  overflow: hidden;
}
.cl_imgs{
  width: 100%;
}
.cli_img{
  width: 150rpx;
  height: 134rpx;
  border: 2rpx solid #f2f2f2;
  float: left;
  margin: 20rpx 20rpx 0 0;
}
.cli_img image{
  height: 100%;
  width: auto;
}
.cl_revet{
  font-size: 28rpx;
  line-height: 36rpx;
