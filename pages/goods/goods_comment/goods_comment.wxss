.goods_comments{
  width: 100%;
  background: #fff;
}
.gcom_tit{
  height: 96rpx;
  padding: 0 20rpx;
  margin-top: 10rpx;
  border-bottom: 2rpx solid #f0f0f0;
}
.gct_left{
  float: left;
  font-size: 28rpx;
  color: #2d2d2d;
  line-height: 96rpx;
}
.gct_right{
  float: right;
  font-size: 28rpx;
  color: #292929;
  line-height: 96rpx;
}
.gct_right text{
  color: #ff1822;
}
.gcom_list{
  padding: 0 20rpx 20rpx;
  border-bottom: 2rpx solid #f1f1f1;
}
.cl_msg{
  display: flex;
  margin-top: 28rpx;
}
.clm_img{
  width: 146rpx;
  height: 24rpx;
}
.clm_name{
