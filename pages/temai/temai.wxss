/* pages/temai/temai.wxss */
page{
	background: #f0f0f0;
	border-top: 2rpx solid #f0f0f0;
}
.goods{
	background: #fff;
	margin-bottom: 10rpx;
}
.goods_img{
	width: 200rpx;
	height: 200rpx;
	margin: 26rpx 20rpx;
}
.goods_msg{
	margin-right: 20rpx;
}
.goods_name{
	font-size: 32rpx;
	color: #333333;
	line-height: 50rpx;
	margin-top: 34rpx;
	height: 100rpx;
	display: block;
	overflow: hidden;
}
.goods_l{
	float: left;
}
.goods_pri{
	font-size: 36rpx;
	color: #f23030;
}
.goods_pri text{
	font-size: 24rpx;
	padding: 6rpx 10rpx;
	border: 2rpx solid #f23030;
	border-radius: 10rpx;
	margin-left: 20rpx;
}
.goods_opri{
	display: block;
	font-size: 24rpx;
	color: #999;
	text-decoration: line-through;
	margin-top: 12rpx;
}
.goods_btn{
	float: right;
	width: 140rpx;
	height: 60rpx;
	text-align: center;
	color: #fff;
	background: #f23030;
	border-radius: 10rpx;
	font-size: 24rpx;
	line-height: 60rpx;
	margin-top: 14rpx;
}